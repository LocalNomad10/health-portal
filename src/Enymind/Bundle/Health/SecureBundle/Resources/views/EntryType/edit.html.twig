{% extends '::base.html.twig' %}

{% block pagename %}secure-manage-types-edit{% endblock %}

{% block header %}
  <a href="{{ path('secure_manage_types') }}" data-icon="back" data-theme="c">{% trans %}Back{% endtrans %}</a>
  <h1>{% trans %}Edit entry type{% endtrans %}</h1>
{% endblock %}

{% block body %}
  <form action="{{ path('secure_manage_types_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
      {{ form_widget(edit_form) }}
      <p>
          <button type="submit">Edit</button>
      </p>
  </form>

  <ul class="record_actions">
      <li>
          <form action="{{ path('secure_manage_types_delete', { 'id': entity.id }) }}" method="post">
              {{ form_widget(delete_form) }}
              <button type="submit">Delete</button>
          </form>
      </li>
  </ul>
{% endblock %}